{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "NovaAgentOutputSchema",
  "description": "Schema for validating output from the Nova Agent",
  "type": "object",
  "properties": {
    "status": {
      "type": "string",
      "description": "Status of the operation",
      "enum": ["success", "error", "blocked"]
    },
    "message": {
      "type": "string",
      "description": "Message describing the result of the operation"
    },
    "project_id": {
      "type": "string",
      "description": "Unique identifier for the project"
    },
    "files_created": {
      "type": "array",
      "description": "List of files created by the agent",
      "items": {
        "type": "string"
      }
    },
    "ui_components": {
      "type": "object",
      "description": "UI components generated by the agent",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "file_path": {
            "type": "string"
          },
          "code": {
            "type": "string"
          }
        },
        "required": ["type", "name", "file_path"]
      }
    },
    "next_recommended_step": {
      "type": "string",
      "description": "Recommended next step in the workflow"
    },
    "memory_tag": {
      "type": "string",
      "description": "Tag for memory storage"
    },
    "timestamp": {
      "type": "number",
      "description": "Unix timestamp of when the operation was performed"
    }
  },
  "required": ["status", "message", "project_id", "files_created", "timestamp"],
  "allOf": [
    {
      "if": {
        "properties": {
          "status": { "enum": ["success"] }
        }
      },
      "then": {
        "required": ["ui_components", "next_recommended_step"]
      }
    }
  ]
}
