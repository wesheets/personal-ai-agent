{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AgentGovernance",
  "type": "object",
  "properties": {
    "agents": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "tools": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "schemas": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "status": {
            "type": "string",
            "enum": [
              "enabled",
              "disabled",
              "stubbed"
            ]
          }
        },
        "required": [
          "id",
          "status"
        ]
      }
    }
  },
  "required": [
    "agents"
  ]
}