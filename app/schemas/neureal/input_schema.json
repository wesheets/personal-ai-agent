{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "NeurealAgentInputSchema",
  "description": "Schema for validating input to the Neureal Agent",
  "type": "object",
  "properties": {
    "task_input": {
      "type": "string",
      "description": "Task to be performed by the Neureal agent"
    },
    "project_id": {
      "type": ["string", "null"],
      "description": "Unique identifier for the project"
    },
    "temperature": {
      "type": "number",
      "description": "Temperature setting for response generation",
      "minimum": 0.0,
      "maximum": 1.0,
      "default": 0.7
    },
    "max_tokens": {
      "type": "integer",
      "description": "Maximum number of tokens in the response",
      "minimum": 1,
      "default": 1000
    }
  },
  "required": ["task_input"]
}
