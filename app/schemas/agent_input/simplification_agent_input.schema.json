{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Simplification Agent Input Schema",
  "type": "object",
  "properties": {
    "loop_id": { "type": "string" },
    "complexity_audit": {
      "type": "object",
      "properties": {
        "complexity_score": { "type": "number" },
        "flagged_components": {
          "type": "array",
          "items": { "type": "string" }
        },
        "trigger_reason": { "type": "string" }
      },
      "required": ["complexity_score", "flagged_components"]
    },
    "agent_emotion_state": {
      "type": "object",
      "properties": {
        "state": { "type": "string" },
        "influence_level": { "type": "number" }
      },
      "required": ["state"]
    }
  },
  "required": ["loop_id", "complexity_audit", "agent_emotion_state"]
}
