{
  "$schema": "http:
  "title": "Delusion Alert Schema",
  "description": "Schema for alerts generated when a plan is similar to previously rejected plans",
  "type": "object",
  "required": [
    "loop_id",
    "warning_type",
    "message",
    "similarity_score",
    "timestamp"
  ],
  "properties": {
    "loop_id": {
      "type": "string",
      "description": "Identifier for the current loop"
    },
    "warning_type": {
      "type": "string",
      "description": "Type of warning",
      "enum": [
        "plan_repetition",
        "approach_similarity",
        "goal_mismatch"
      ]
    },
    "message": {
      "type": "string",
      "description": "Human-readable message describing the warning"
    },
    "similarity_score": {
      "type": "number",
      "description": "Score indicating how similar the current plan is to a rejected plan",
      "minimum": 0,
      "maximum": 1
    },
    "timestamp": {
      "type": "string",
      "description": "ISO 8601 timestamp when the alert was generated",
      "format": "date-time"
    },
    "similar_loop_id": {
      "type": "string",
      "description": "Identifier for the similar rejected loop"
    },
    "failure_reason": {
      "type": "string",
      "description": "Reason why the similar plan failed"
    },
    "suggested_changes": {
      "type": "array",
      "description": "Suggested changes to avoid repeating the same failure",
      "items": {
        "type": "string"
      }
    },
    "confidence": {
      "type": "number",
      "description": "Confidence in the delusion detection",
      "minimum": 0,
      "maximum": 1
    },
    "severity": {
      "type": "string",
      "description": "Severity of the warning",
      "enum": [
        "low",
        "medium",
        "high",
        "critical"
      ]
    }
  },
  "additionalProperties": False
}
