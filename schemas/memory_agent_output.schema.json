{
  "$schema": "http:
  "title": "Memory Agent Output Schema",
  "description": "Schema for outputs generated by the Memory Agent when performing memory operations",
  "type": "object",
  "required": [
    "operation_type",
    "timestamp",
    "status",
    "memory_path"
  ],
  "properties": {
    "operation_type": {
      "type": "string",
      "description": "Type of memory operation performed",
      "enum": [
        "store",
        "retrieve",
        "delete",
        "list",
        "update",
        "search"
      ]
    },
    "timestamp": {
      "type": "string",
      "description": "ISO 8601 timestamp when the operation was performed",
      "format": "date-time"
    },
    "status": {
      "type": "string",
      "description": "Status of the memory operation",
      "enum": [
        "success",
        "error",
        "partial"
      ]
    },
    "memory_path": {
      "type": "string",
      "description": "Path in memory that was operated on"
    },
    "data_reference": {
      "type": "string",
      "description": "Reference to the stored data (for store operations)"
    },
    "data": {
      "description": "Retrieved data (for retrieve operations)"
    },
    "deleted": {
      "type": "boolean",
      "description": "Whether data was successfully deleted (for delete operations)"
    },
    "paths": {
      "type": "array",
      "description": "List of paths (for list operations)",
      "items": {
        "type": "string"
      }
    },
    "error": {
      "type": "string",
      "description": "Error message if operation failed"
    },
    "metadata": {
      "type": "object",
      "description": "Additional metadata about the operation",
      "properties": {
        "size": {
          "type": "integer",
          "description": "Size of the data in bytes"
        },
        "content_type": {
          "type": "string",
          "description": "Content type of the data"
        },
        "created_at": {
          "type": "string",
          "description": "ISO 8601 timestamp when the data was created",
          "format": "date-time"
        },
        "updated_at": {
          "type": "string",
          "description": "ISO 8601 timestamp when the data was last updated",
          "format": "date-time"
        },
        "tags": {
          "type": "array",
          "description": "Tags associated with the data",
          "items": {
            "type": "string"
          }
        }
      }
    }
  },
  "additionalProperties": False,
  "allOf": [
    {
      "if": {
        "properties": {
          "operation_type": { "enum": ["store"] }
        }
      },
      "then": {
        "required": ["data_reference"]
      }
    },
    {
      "if": {
        "properties": {
          "operation_type": { "enum": ["retrieve"] }
        }
      },
      "then": {
        "required": ["data"]
      }
    },
    {
      "if": {
        "properties": {
          "operation_type": { "enum": ["delete"] }
        }
      },
      "then": {
        "required": ["deleted"]
      }
    },
    {
      "if": {
        "properties": {
          "operation_type": { "enum": ["list"] }
        }
      },
      "then": {
        "required": ["paths"]
      }
    },
    {
      "if": {
        "properties": {
          "status": { "enum": ["error"] }
        }
      },
      "then": {
        "required": ["error"]
      }
    }
  ]
}
