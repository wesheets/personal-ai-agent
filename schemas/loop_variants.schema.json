{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Loop Variants Schema",
  "description": "Schema for plan variants generated before execution",
  "type": "object",
  "required": [
    "loop_id",
    "loop_variants",
    "timestamp"
  ],
  "properties": {
    "loop_id": {
      "type": "string",
      "description": "Unique identifier of the loop"
    },
    "loop_variants": {
      "type": "array",
      "description": "List of plan variants with different tones and approaches",
      "items": {
        "type": "object",
        "required": [
          "plan_id",
          "tone",
          "belief_score"
        ],
        "properties": {
          "plan_id": {
            "type": "string",
            "description": "Unique identifier of the plan variant"
          },
          "tone": {
            "type": "string",
            "description": "Tone of the plan variant",
            "enum": ["safe", "ambitious", "creative", "analytical", "cautious"]
          },
          "belief_score": {
            "type": "number",
            "description": "Belief alignment score for the plan variant (0.0 to 1.0)",
            "minimum": 0.0,
            "maximum": 1.0
          }
        }
      },
      "minItems": 1
    },
    "timestamp": {
      "type": "string",
      "description": "ISO 8601 timestamp when the variants were generated",
      "format": "date-time"
    }
  },
  "additionalProperties": false
}
