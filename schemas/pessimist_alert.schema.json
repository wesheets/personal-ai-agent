{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Pessimist Alert Schema",
  "description": "Schema for pessimist agent alerts that flag optimism bias and other tone mismatches",
  "type": "object",
  "required": [
    "loop_id",
    "alert_type",
    "bias_tags",
    "suggestion"
  ],
  "properties": {
    "loop_id": {
      "type": "string",
      "description": "Identifier for the loop being evaluated"
    },
    "alert_type": {
      "type": "string",
      "description": "Type of alert being raised",
      "enum": [
        "summary_tone_mismatch",
        "excessive_confidence",
        "vague_accomplishment",
        "ignored_feedback",
        "unrealistic_timeline",
        "scope_expansion"
      ]
    },
    "bias_tags": {
      "type": "array",
      "description": "Tags identifying specific biases detected",
      "items": {
        "type": "string",
        "enum": [
          "optimism_bias",
          "vague_summary",
          "overconfidence",
          "feedback_dismissal",
          "timeline_compression",
          "scope_creep",
          "achievement_inflation",
          "complexity_underestimation",
          "risk_blindness"
        ]
      },
      "minItems": 1
    },
    "suggestion": {
      "type": "string",
      "description": "Suggested action to address the detected bias"
    },
    "confidence": {
      "type": "number",
      "description": "Confidence score for this alert (0.0 to 1.0)",
      "minimum": 0.0,
      "maximum": 1.0
    },
    "severity": {
      "type": "string",
      "description": "Severity level of the alert",
      "enum": ["low", "medium", "high"],
      "default": "medium"
    },
    "details": {
      "type": "object",
      "description": "Additional details about the alert",
      "properties": {
        "detected_phrases": {
          "type": "array",
          "description": "Specific phrases that triggered the alert",
          "items": {
            "type": "string"
          }
        },
        "tone_score": {
          "type": "number",
          "description": "Numerical score for tone evaluation",
          "minimum": 0.0,
          "maximum": 1.0
        },
        "feedback_references": {
          "type": "array",
          "description": "References to operator feedback that conflicts with the summary",
          "items": {
            "type": "string"
          }
        },
        "context": {
          "type": "string",
          "description": "Additional context for the alert"
        }
      }
    },
    "timestamp": {
      "type": "string",
      "description": "ISO 8601 timestamp when the alert was generated",
      "format": "date-time"
    }
  }
}
