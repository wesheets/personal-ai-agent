{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Persona Context Schema",
  "description": "Schema for orchestrator persona context used in cognitive mode switching",
  "type": "object",
  "required": [
    "loop_id",
    "persona_mode",
    "description",
    "strengths",
    "ideal_for",
    "timestamp"
  ],
  "properties": {
    "loop_id": {
      "type": "string",
      "description": "Unique identifier of the loop"
    },
    "persona_mode": {
      "type": "string",
      "description": "The active persona mode",
      "enum": ["SAGE", "ARCHITECT", "RESEARCHER", "RITUALIST", "INVENTOR"]
    },
    "description": {
      "type": "string",
      "description": "Description of the persona mode"
    },
    "strengths": {
      "type": "array",
      "description": "List of strengths associated with this persona",
      "items": {
        "type": "string"
      },
      "minItems": 1
    },
    "ideal_for": {
      "type": "array",
      "description": "List of scenarios this persona is ideal for",
      "items": {
        "type": "string"
      },
      "minItems": 1
    },
    "timestamp": {
      "type": "string",
      "description": "ISO 8601 timestamp when the persona was loaded",
      "format": "date-time"
    }
  },
  "additionalProperties": false
}
