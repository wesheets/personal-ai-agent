{
  "buildCommand": "npm install --prefix ./app/frontend && npm run build --prefix ./app/frontend",
  "outputDirectory": "app/frontend/dist",
  "framework": "vite",
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1.js" },
    { "source": "/(.*)", "destination": "/app/frontend/dist/index.html" }
  ]
}
